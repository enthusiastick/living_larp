<%- if user_signed_in? -%>
  <h2><%= @game.name %></h2>
  <p>Starting Points: <%= @game.starting_points %></p>
  <%- unless @game.game_traits == [] -%>
    <table width=100%>
      <thead>
        <tr>
          <th>Trait</th>
          <th>Max Purchases</th>
          <th>Downtime</th>
          <th>Cost</th>
        </tr>
      </thead>
      <tbody>
      <%- @game.game_traits.each do |trait| -%>
      <tr>
        <td><%= trait.name %></td>
        <td><%= trait.max_purchases unless trait.max_purchases == nil%></td>
        <td>
          <%- if trait.bgs -%>
            Yes
          <%- else -%>
            No
          <%- end -%>
        </td>
        <td><%= trait.point_cost %></td>
      </tr>
      <%- end -%>
      </tbody>
    </table>
  <%- end -%>

  <ul class="inline-list">
    <li><%= button_to 'Configure Traits', new_game_game_trait_path(@game), method: :get, class: 'button' %></li>
    <li><%= button_to 'Manage Players', game_players_path(@game), method: :get, class: 'button' %></li>
  </ul>

<%- end -%>
